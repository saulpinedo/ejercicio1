<%= form_for @empleado do |f|  %>


<div class="form-group">
    <%=f.label :nombre ,'Nombre',class:'col-sm-2 control-label'%>
  <div class="col-sm-10">
    <%= f.text_field :nombre, class:'form-control' %>
  </div>

  <div class="form-group">
    <%=f.label :nacionalidad,'Nacionalidad',class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
    <%= f.text_field :nacionalidad,class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%=f.label 'Pais',class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :pai_id,Pai.all,:id,:nombre,class:'form-control' %>
    </div>
  </div>

  <div>
    <%= f.submit 'Crear empleado', :class=>'btn btn-primary'%>
    <%= link_to 'ir a index', empleados_path %>
  </div>
</div>
<%end%>