<p id="notice"><%= notice %></p>


<h1>Lista Paises</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pais.each do |pai| %>
      <tr>
        <td><%= pai.nombre %></td>
        <td><%= pai.descripcion %></td>
        <td><i><%= link_to '', pai,class: 'fa fa-folder-open' %></i></td>
        <td><i><%= link_to '', edit_pai_path(pai),class: 'fa fa-pencil-square-o' %></i></td>
        <td><i><%= link_to '', pai, method: :delete, data: { confirm: 'Are you sure?' },class: 'fa fa-trash'%></i></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Pais', new_pai_path,:class => 'btn btn-primary' %>
